
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "type": "object",
      "description": "Stores public-facing user information.",
      "properties": {
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "role": { "type": "string" },
        "active": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" },
        "lastLoginAt": { "type": "string", "format": "date-time" }
      },
      "required": ["email", "role", "active", "createdAt"]
    },
    "PreggerReport": {
      "title": "Pregger Report",
      "type": "object",
      "description": "Report from the Pregger department.",
      "properties": {
        "report_date": { "type": "string", "format": "date-time" },
        "shift": { "type": "string" },
        "workCompleted": { "type": "array", "items": { "type": "object" } },
        "personnel": { "type": "array", "items": { "type": "object" } }
      }
    },
    "TapeheadEntry": {
      "title": "Tapehead Entry",
      "type": "object",
      "description": "Entry from a Tapehead operator.",
      "properties": {
        "date": { "type": "string", "format": "date-time" },
        "shift": { "type": "number" },
        "operatorName": { "type": "string" },
        "workItems": { "type": "array", "items": { "type": "object" } }
      }
    },
    "TapeheadReview": {
        "title": "Tapehead Review",
        "type": "object",
        "description": "A shift lead's review and finalization of operator submissions.",
        "properties": {
            "date": { "type": "string", "format": "date" },
            "shift": { "type": "number" },
            "shiftLeadName": { "type": "string" },
            "aiSummary": { "type": "string" },
            "finalComments": { "type": "string" }
        }
    },
    "GantryReport": {
      "title": "Gantry Report",
      "type": "object",
      "description": "Report from the Gantry department.",
      "properties": {
        "report_date": { "type": "string", "format": "date-time" },
        "shift": { "type": "string" },
        "molds": { "type": "array", "items": { "type": "object" } }
      }
    },
    "FilmsReport": {
      "title": "Films Report",
      "type": "object",
      "description": "Report from the Films department.",
      "properties": {
        "report_date": { "type": "string", "format": "date-time" },
        "gantry_number": { "type": "string" }
      }
    },
    "GraphicsReport": {
      "title": "Graphics Report",
      "type": "object",
      "description": "Task tracking for the Graphics department.",
      "properties": {
        "tagId": { "type": "string" },
        "status": { "type": "string" },
        "type": { "type": "string" }
      }
    },
    "QcInspection": {
      "title": "QC Inspection",
      "type": "object",
      "description": "Quality control inspection report.",
      "properties": {
        "inspectionDate": { "type": "string", "format": "date-time" },
        "oeNumber": { "type": "string" },
        "totalScore": { "type": "number" },
        "status": { "type": "string" }
      }
    },
    "AnalyticsSnapshot": {
      "title": "Analytics Snapshot",
      "type": "object",
      "description": "Aggregated data for analytics.",
      "properties": {
        "createdAt": { "type": "string", "format": "date-time" },
        "data": { "type": "object" }
      }
    },
    "SailStatus": {
      "title": "Sail Status",
      "type": "object",
      "description": "Current status of a sail through the production process.",
      "properties": {
        "sailId": { "type": "string" },
        "status": { "type": "string" }
      }
    },
    "OeJob": {
      "title": "OE Job",
      "type": "object",
      "description": "Defines an Order Entry job and its sections.",
      "properties": {
        "oeBase": { "type": "string" },
        "status": { "type": "string" },
        "sections": { "type": "array", "items": { "type": "object" } }
      }
    }
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores user profiles."
    },
    "/pregger_reports/{docId}": {
      "schema": { "$ref": "#/entities/PreggerReport" },
      "description": "Stores reports from the Pregger department."
    },
    "/tapeheads_submissions/{docId}": {
      "schema": { "$ref": "#/entities/TapeheadEntry" },
      "description": "Stores entries from Tapehead operators."
    },
    "/tapehead_reviews/{docId}": {
      "schema": { "$ref": "#/entities/TapeheadReview" },
      "description": "Stores reviews of Tapehead entries."
    },
    "/gantry_reports/{docId}": {
      "schema": { "$ref": "#/entities/GantryReport" },
      "description": "Stores reports from the Gantry department."
    },
    "/films_reports/{docId}": {
      "schema": { "$ref": "#/entities/FilmsReport" },
      "description": "Stores reports from the Films department."
    },
    "/graphics_tasks/{docId}": {
      "schema": { "$ref": "#/entities/GraphicsReport" },
      "description": "Stores tasks for the Graphics department."
    },
    "/qc_inspections/{docId}": {
      "schema": { "$ref": "#/entities/QcInspection" },
      "description": "Stores QC inspection reports."
    },
    "/analytics_snapshots/{docId}": {
      "schema": { "$ref": "#/entities/AnalyticsSnapshot" },
      "description": "Stores aggregated analytics data."
    },
    "/sail_status/{docId}": {
      "schema": { "$ref": "#/entities/SailStatus" },
      "description": "Stores sail status information."
    },
    "/jobs/{docId}": {
      "schema": { "$ref": "#/entities/OeJob" },
      "description": "Stores Order Entry job definitions."
    }
  },
  "auth": {
    "providers": ["password"]
  }
}

    